/* pages3/template2/template2.wxss */
/**index.wxss**/
@import"/pages1/yi/yi.wxss";
page{
    width: 100%;
    height: 100%;
}
.nav {
    height: 80rpx;
    width: 100%;
    box-sizing: border-box;
    overflow: hidden;
    line-height: 80rpx;
    background: #f7f7f7;
    font-size: 11px;
    white-space: nowrap;
    color: rgba(76, 76, 133, 0.664);
    position: fixed;
    top: 0;
    left: 0;
    z-index: 99;
}
::-webkit-scrollbar{
  width: 0px;
  height: 0px;
  background: transparent;
}
.combo{
  height: 380rpx;
  display: flex;
 justify-content: space-around;
 background: rgba(243, 238, 238, 0.445)
}
.title{
  display: flex;
  justify-content: space-between;
  height: 30px;
  line-height: 30px;
}
.scrPicture{
  width:100%;
  height:170px;
  white-space: nowrap;
}
.green{
  margin-right: 10rpx;
  width: 33%;
  height: 98%;
  display: inline-block;
}
.tp{
  width: 100%;
  height: 50%;
  background:rgba(228, 8, 8, 0.075);
}
.greenName{
  height: 30px;
  line-height: 30px;
  font-size: 20px;
}
.price{
  display: flex;
  justify-content: space-between;
  width: 98%;
  height: 20px;
  line-height: 20px;
  font-size: 15px;
}
.nav-item {
    width: 20%;
    display: inline-block;
    text-align: center;
}
.nav-item.active{
    color: #ff4401;
    font-size: 18px;
}
.tab-box{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding-top: 90rpx;
  overflow: hidden;
}




