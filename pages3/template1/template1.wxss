/* pages3/template1/template1.wxss */
page{
   line-height-step: #F7F7F7;
}
.shop-culture{
  position: relative;
  width: 100%;
  height:300rpx;
}
.store{
  margin: 10px 10px;
  width: 20%;
  height: 40%;
  border: 1px solid #000;
}
.shop-cultureimg{
 width: 100%;
 height: 100%;
}
.storeDescribe{
  display: inline-block;
  position: absolute;
  font-size: 12px;
  left: 100px;
  top: 5px;
  color: #ccc;
}
.storename{
  color: #000;
  margin-bottom: 5px;
}
.pay{
  position: absolute;
  bottom: 5px;
  display: flex;
  flex-basis: row;
  justify-content:space-between;
  width: 100%;
  height: 103rpx;
  margin-right: 20rpx;
  margin-top: 150rpx;
  background: #F7F7F7;
  border-radius: 20rpx;
  z-index: 999;
}
.pay-left{
  height: auto;
}
.pay-reght{
  display: flex;
  flex-basis: row; 
}
.car{
  height: 100rpx;
  font-size: 35rpx;
  width: 200rpx;
  padding: 0px;
  text-align:center;
  line-height: 100rpx;
}
.guide{
height: 100rpx;
width: 100%;
display: flex;
justify-content: center;  
align-items: center;
background: rgb(176, 176, 216);
color: rgba(207, 243, 107, 0.87);
}
.scr-content{
  width: 100%;
  height: 900rpx;
  margin-top: 20rpx;
}

.menus-content{
  display: flex;
  flex-direction: row;
  align-content: flex-start;
  /* justify-content: center; */
  width: 100%;
  height: 1300rpx;
  margin-top: 10rpx;
  flex-wrap: wrap;
  white-space: pre-wrap;
}
.menu{
  width:30%;
  height: 300rpx;
  border: 1rpx solid grey;
  border-radius:12rpx;
  background: white;
  margin-left:20rpx;
  margin-top: 10rpx;
}
.imgs{
  width: 100%;
  height: 80%;
  /* background:rgb(173, 214, 240); */
  border-radius:10rpx;
}
.img{
  width: 100%;
  height: 75%;
  /* background:rgb(173, 214, 240); */
  overflow: hidden;
}
.imgwz{
  margin-top: 0,0;
  padding-top: 4px;
  padding-left: 5px;
  height: 25%;
  line-height: 25rpx;
  font-size: 30rpx;
  overflow: hidden;
}
.describe{
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content:space-between;
}
.but{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content:space-around;
}
.add{
  width: 1.5em;
  height: 1.5em;
  border-radius: 100px; 
  display: flex;
  align-items: center;
  justify-content: center;
  color:white;
  font-size: 18px;
  background:  #ff4401;
}
.sub{
  width: 1.5em;
  height: 1.5em;
  border-radius: 100px; 
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ccc;
  border: 1rpx solid #ccc;
}
.menu-name{
  font-size:30rpx;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color:red;
}