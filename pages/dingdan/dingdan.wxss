}
button{
  height: 100%;
  width: 18px;
  line-height: 100%;
  border-radius: 0px;
  display: flex;
  justify-content: center;
  color: #FF4401;
  border: 1px solid #FF4401
}
button::after{
  border: none;
}
.price{
  height: 50rpx;
  line-height: 50rpx;
  font-size: 15px;
  color: red;
}
.price1{
  height: 50rpx;
  line-height: 50rpx;
