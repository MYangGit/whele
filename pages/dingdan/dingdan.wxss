}
.bottom-bar{ 
display:flex; 
position: fixed; 
bottom:0; 
width:100%; 
height:80px; 
line-height:80px; 
background:#fff; 
box-shadow: 0 -5px 10px #ccc; 
} 
.bottom-bar.hidden{ 
display:none; 
} 
.bottom-bar>view{ 
flex-grow: 1; 
} 
.bottom-bar .count{ 
padding-left:10px; 
} 
.bottom-bar .num{ 
margin-right:10px; 
font-size:18px; 
font-weight:bolder; 
color:red; 
} 
.bottom-bar .btn{ 
height:40px; 
width:50px; 
margin:20px 10px 0 0; 
color:#fff; 
line-height:40px; 
text-align:center; 
font-size:16px; 
background:#ff4401; 
}

